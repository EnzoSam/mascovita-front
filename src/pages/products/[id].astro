import type { Product } from 'src/types';

const { id } = Astro.params;

export async function getStaticPaths() {
  const products: Product[] = [
    { id: 1, name: 'Producto 1', description: '...', price: 29.99, image: '/images/producto1.jpg' },
    { id: 2, name: 'Producto 2', description: '...', price: 49.99, image: '/images/producto2.jpg' },
    { id: 3, name: 'Producto 3', description: '...', price: 79.99, image: '/images/producto3.jpg' },
  ];

  return products.map((product) => {
    return {
      params: { id: product.id.toString() },
      props: { product }, 
    };
  });
}
